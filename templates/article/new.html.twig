{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-5 shadow-lg border-0">
                    <h1 class="text-center text-dark mb-4">Créer un nouvel article</h1>

                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_label(form.titre, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.texte, 'Content', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.texte, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        {{ form_errors(form.texte) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.link, 'Link', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.link, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        {{ form_errors(form.link) }}
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">Enregistrer</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
