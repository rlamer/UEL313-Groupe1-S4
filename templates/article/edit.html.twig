{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-5 shadow-lg border-0">
                    <h1 class="text-center text-dark mb-4">Edit Article</h1>

                    <!-- Form to edit the article -->
                    <div class="mb-4">
                        <form method="post" action="{{ path('app_article_edit', {'id': article.id}) }}">
                            {{ form_start(form) }}

                            <div class="mb-3">
                                {{ form_label(form.titre, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.texte, 'Content', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.texte, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_errors(form.texte) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.link, 'Link', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.link, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_errors(form.link) }}
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Update</button>
                            </div>

                            {{ form_end(form) }}
                        </form>
                    </div>

                    <!-- Back to List Button -->
                    <div class="text-center mb-3">
                        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary btn-lg w-100">Back to List</a>
                    </div>

                    <!-- Delete Form (if needed) -->
                    <div class="text-center">
                        {{ include('article/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
