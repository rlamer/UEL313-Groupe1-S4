{% extends 'base.html.twig' %}

{% block title %}Watson{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">Watson</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {# Si l'article a une image spécifique, on l'affiche, sinon on utilise l'image par défaut #}
                    <img src="{{ article.image is defined and article.image ? asset('images/' ~ article.image) : asset('images/WATSON.png') }}" class="card-img-top" alt="Image de l'article">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.texte|slice(0, 100) }}...</p>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun article disponible pour le moment.</p>
        {% endfor %}
    </div>
{% endblock %}
